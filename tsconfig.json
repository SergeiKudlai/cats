{
  "compilerOptions": {
    "jsx": "react",
    "target": "es2017",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "rootDir": "./src",
    "outDir": "dir",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "removeComments": true,
    "noEmitOnError": true,
    "allowSyntheticDefaultImports": true,  
    "allowJs": true
  },
  "exclude": [
    "node_modules",
  ],
  "include": [
    "./src/**/*",
    "declare.d.ts"
  ]
}